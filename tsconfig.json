{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      // Logic
      "@classes/*": [
        "src/logic/classes/*"
      ],
      "@constants/*": [
        "src/logic/constants/*"
      ],
      "@functions/*": [
        "src/logic/functions/*"
      ],
      "@typing/*": [
        "src/logic/typing/*"
      ],
      "@utils/*": [
        "src/logic/utils/*"
      ]
    }
  },
  "include": [
    "src",
    "scripts",
    "rollup.config.js",
    "rollup.config.visualizer.js"
  ]
}